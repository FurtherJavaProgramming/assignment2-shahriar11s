<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <!-- Card Number -->
    <Label text="Card Number (16 digits):"/>
    <TextField fx:id="cardNumberField"/>

    <!-- Expiry Date -->
    <Label text="Expiry Date (MM/YY):"/>
    <TextField fx:id="expiryDateField"/>

    <!-- CVV -->
    <Label text="CVV (3 digits):"/>
    <TextField fx:id="cvvField"/>

    <!-- Submit Button -->
    <Button text="Submit Payment" onAction="#onSubmitPayment" style="-fx-background-color: green; -fx-text-fill: white;"/>
</VBox>
