<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>  <!-- Add padding around the table -->
    </padding>

    <TableView fx:id="bookTable" prefHeight="300.0" prefWidth="800.0" VBox.vgrow="NEVER">  <!-- Adjust table size -->
        <columns>
            <TableColumn fx:id="idCol" text="ID" />
            <TableColumn fx:id="titleCol" text="Title" />
            <TableColumn fx:id="authorCol" text="Author" />
            <TableColumn fx:id="priceCol" text="Price (AUD)" />
            <TableColumn fx:id="stockCol" text="# Physical Copies" />
            <TableColumn fx:id="soldCol" text="# Sold Copies" />
        </columns>
    </TableView>
</VBox>
