<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="450.0" prefWidth="870.0" spacing="20" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
  
  <!-- Profile Menu -->
  <children>
    <MenuBar fx:id="menu" prefHeight="25.0" prefWidth="870.0">
      <menus>
        <Menu fx:id="profile" mnemonicParsing="false" text="Profile">
          <items>
            <MenuItem fx:id="viewProfile" mnemonicParsing="false" text="View my profile" />
            <MenuItem fx:id="updateProfile" mnemonicParsing="false" text="Update my profile" />
          </items>
        </Menu>
      </menus>
    </MenuBar>

    <!-- Welcome Message -->
    <VBox alignment="CENTER" spacing="10">
      <Label fx:id="welcomeLabel" text="Welcome to The Reading Room Bookstore!" style="-fx-font-size: 20px;" />

      <!-- Buttons for menu options -->
      <Button fx:id="addBookBtn" text="Add Book to Shopping Cart" />
      <Button fx:id="viewCartBtn" text="View Shopping Cart" />
      <Button fx:id="removeBookBtn" text="Remove Book from Cart" />
      <Button fx:id="checkoutBtn" text="Checkout" />
      <Button fx:id="listBooksBtn" text="List All Books" />
      <Button fx:id="quitBtn" text="Quit" />
    </VBox>
  </children>
</VBox>
