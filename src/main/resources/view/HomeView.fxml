<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1">
    
    <!-- Top Menu Bar -->
    <top>
        <MenuBar fx:id="menu" prefHeight="25.0" prefWidth="800.0">
            <menus>
                <Menu fx:id="profile" mnemonicParsing="false" text="Profile">
                    <items>
                        <MenuItem fx:id="viewProfile" mnemonicParsing="false" text="View Profile" />
                        <MenuItem fx:id="updateProfile" mnemonicParsing="false" text="Update Profile" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <!-- Center section with Welcome message and Top-Selling Books Table -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 10;">
            
            <!-- Welcome Message -->
            <Label fx:id="welcomeLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Welcome!" />
            
            <!-- Label for Most Selling Books -->
            <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Most Selling Books" />

            <!-- Top-Selling Books Table -->
            <TableView fx:id="topBooksTable" maxHeight="300" prefWidth="600" style="-fx-background-color: #fff;">
                <columns>
                    <TableColumn fx:id="titleCol" prefWidth="328.0" text="Title" />
                    <TableColumn fx:id="authorCol" prefWidth="225.0" text="Author" />
                    <TableColumn fx:id="soldCol" prefWidth="226.0" text="Sold Copies" />
                </columns>
            </TableView>

            <!-- Buttons -->
            <VBox alignment="CENTER" spacing="10">
                <Button fx:id="listBooksBtn" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;" text="List All Books" />
                <Button fx:id="addBookBtn" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;" text="Purchase Book" />
                <Button fx:id="viewCartBtn" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;" text="View Cart" />
                <Button fx:id="checkoutBtn" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;" text="Checkout" />
            </VBox>

        </VBox>
    </center>

    <!-- Bottom Right: Quit Button -->
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="20" style="-fx-padding: 10;">
            <Button fx:id="quitBtn" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;" text="Quit" />
        </HBox>
    </bottom>

</BorderPane>
