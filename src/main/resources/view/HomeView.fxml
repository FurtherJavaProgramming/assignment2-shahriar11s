<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f4f4;">
    
    <!-- Top Menu Bar -->
    <top>
        <MenuBar fx:id="menu" prefHeight="25.0" prefWidth="800.0">
            <menus>
                <Menu fx:id="profile" mnemonicParsing="false" text="Profile">
                    <items>
                        <MenuItem fx:id="viewProfile" mnemonicParsing="false" text="View my profile"/>
                        <MenuItem fx:id="updateProfile" mnemonicParsing="false" text="Update my profile"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <!-- Center section with Welcome message and Top-Selling Books Table -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 20;">
            
            <!-- Welcome Message -->
            <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

            <!-- Top-Selling Books Table -->
            <TableView fx:id="topBooksTable" prefWidth="600" maxHeight="150" style="-fx-background-color: #fff;">
                <columns>
                    <TableColumn fx:id="titleCol" text="Title" prefWidth="200"/>
                    <TableColumn fx:id="authorCol" text="Author" prefWidth="200"/>
                    <TableColumn fx:id="soldCol" text="Sold Copies" prefWidth="200"/>
                </columns>
            </TableView>

            <!-- Buttons -->
            <VBox spacing="10" alignment="CENTER">
                <Button fx:id="addBookBtn" text="Add Book to Shopping Cart" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;"/>
                <Button fx:id="viewCartBtn" text="View Shopping Cart" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;"/>
                <Button fx:id="checkoutBtn" text="Checkout" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;"/>
                <Button fx:id="listBooksBtn" text="List All Books" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;"/>
            </VBox>

        </VBox>
    </center>

    <!-- Bottom Right: Quit Button -->
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" spacing="20" style="-fx-padding: 10;">
            <Button fx:id="quitBtn" text="Quit" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;"/>
        </HBox>
    </bottom>

</BorderPane>
